<p id="notice"><%= notice %></p>
<div class="container-fluid">
<h1>Complaints</h1>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>Call UID</th>
      <th>Call date</th>
      <th>Dealer</th>
      <th>Product name</th>
      <th>Fault</th>
      <th>Complaint status</th>
      <th>Call history</th>
      <th>Warranty</th>
      <th>Mechenic</th>
    </tr>
  </thead>

  <tbody>
    <% @complaints.each do |complaint| %>
      <tr>
        <td><%= complaint.id %></td>
        <td><%= complaint.call_date %></td>
        <td><%= complaint.dealer %></td>
        <td><%= complaint.product_name %></td>
        <td><%= complaint.fault %></td>
        <td><%= complaint.complaint_status %></td>
        <td><%= complaint.call_history %></td>
        <td><%= complaint.warranty %></td>
        <td><%= complaint.mechenic %></td>
        <td>
        <div style="float:right">
        <%= link_to 'Show', complaint %>
        <%= link_to 'Edit', edit_complaint_path(complaint) %>
        <%= link_to 'Destroy', complaint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Complaint', new_complaint_path, class: "btn btn-secondary" %>
</div>
