<%= form_with(model: dealer, local: true) do |form| %>
  <% if dealer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(dealer.errors.count, "error") %> prohibited this dealer from being saved:</h2>

      <ul>
      <% dealer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2">
      DealerName
    </label>
    <div class="col">
      <%= form.text_field :dealer_naem, class: "form-control",placeholder: "Enter dealer's name" %>
    </div>

    <label for="inputEmail3"class="col-sm-2">
      Contact
    </label>
    <div class="col">
      <%= form.text_field :dealer_contact, class: "form-control",placeholder: "10 digit contact number"%>
    </div>

    <label for="inputEmail3"class="col-sm-2">
      Dealer's Adresss
    </label>
    <div class="col">
      <%= form.text_field :dealer_address,class: "form-control",placeholder:"Dealer's Adress" %>
    </div>

    <% if (params[:controller]=='dealers'&& params[:action] == 'new')%>
      <div class="col">
        <%= form.submit "Create Dealer", class: 'btn btn-success'%>
        <%= link_to 'Cancel', dealers_path,class: "btn btn-secondary"%>
      </div>
      <%else%>
      <div class="col">
        <%= form.submit "Update Dealer", class: 'btn btn-success'%>
        <%= link_to 'Cancel', dealers_path,class: "btn btn-secondary"%>
        <%= link_to 'Dealer Details', @dealer,class: "btn btn-secondary"%>
      </div>
      <%end%>
<% end %>
