<%= form_with(model: brand, local: true) do |form| %>
  <% if brand.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(brand.errors.count, "error") %> prohibited this brand from being saved:</h2>

      <ul>
      <% brand.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2">
      Brand Name
    </label>
    <div class="col">
      <%= form.text_field :brand_name, class: "form-control",placeholder: "Enter a new Brand" %>
    </div>
  </br>
  <% if (params[:controller]=='brands'&& params[:action] == 'new')%>
    <div class="col">
      <%= form.submit "Create Brand", class: 'btn btn-success'%>
      <%= link_to 'Cancel', brands_path,class: "btn btn-secondary"%>
    </div>
    <%else%>
    <div class="col">
      <%= form.submit "Update Brand", class: 'btn btn-success'%>
      <%= link_to 'Cancel', brands_path,class: "btn btn-secondary"%>
      <%= link_to 'Show Brand', @brand,class: "btn btn-secondary"%>

    </div>
    <%end%>

  </div>

<% end %>
