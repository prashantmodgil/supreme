<p id="notice"><%= notice %></p>
<div class="container-fluid">
<h1>Brands</h1>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>Brand name</th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.brand_name %>
          <div style="float:right" >
          <%= link_to 'Show', brand_path(brand),style: "text-white"%>
          <%= link_to 'Edit', edit_brand_path(brand) %>
          <%= link_to 'Delete', brand, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brand', new_brand_path,class: "btn btn-secondary"%>
</div>
