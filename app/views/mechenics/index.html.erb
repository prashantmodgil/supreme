<p id="notice"><%= notice %></p>
<div class="container-fluid">
<h1>Mechenics</h1>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>Mec name</th>
      <th>Primary Contact</th>
      <th>Alternative Contact</th>
      <th>District</th>
    </tr>
  </thead>

  <tbody>
    <% @mechenics.each do |mechenic| %>
      <tr>
        <td><%= mechenic.mec_name %></td>
        <td><%= mechenic.mobile_num_1 %></td>
        <td><%= mechenic.mobile_num2 %></td>
        <td><%= mechenic.district %></td>
        <td>
        <div style="float:right" >
        <%= link_to 'Show', mechenic %>
        <%= link_to 'Edit', edit_mechenic_path(mechenic) %>
        <%= link_to 'Destroy', mechenic, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mechenic', new_mechenic_path,class: "btn btn-secondary" %>
