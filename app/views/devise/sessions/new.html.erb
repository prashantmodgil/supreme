
<section class="hero is-fullheight session-background">
<div class="hero-body">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5-tablet is-4-desktop is-3-widescreen">
        <div class= "box">
          <h2>Log in</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <label class="label">
              Email
            </label>
            <div class="control has-icons-left">
              <%= f.email_field :email ,class: "input is-success" %>
              <span class="icon is-small is-left">
                <i class="fa fa-envelope-square"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <label class="label">
              Password
            </label>
            <div class="control has-icons-left">
              <%= f.password_field :password ,class: "input is-success" %>
              <span class="icon is-small is-left">
                <i class="fa fa-key"></i>
              </span>
            </div>
          </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
          <div class="actions">
            <%= f.submit "Log in", class: 'button is-success' %>
          </div>
          <%= render "devise/shared/links" %>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
</section>
